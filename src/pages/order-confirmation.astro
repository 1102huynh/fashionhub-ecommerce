---
import EcommerceLayout from '../layouts/EcommerceLayout.astro';
---

<EcommerceLayout title="Order Confirmation - FashionHub" description="Thank you for your order!">
	<div class="confirmation-container">
		<div class="confirmation-card">
			<div class="success-icon">âœ“</div>
			<h1>Order Confirmed!</h1>
			<p class="confirmation-message">
				Thank you for your purchase. Your order has been successfully placed.
			</p>

			<div class="order-info">
				<div class="info-item">
					<span class="info-label">Order Number:</span>
					<span class="info-value" id="order-number">Loading...</span>
				</div>
				<div class="info-item">
					<span class="info-label">Order Date:</span>
					<span class="info-value" id="order-date"></span>
				</div>
				<div class="info-item">
					<span class="info-label">Estimated Delivery:</span>
					<span class="info-value" id="delivery-date"></span>
				</div>
			</div>

			<div class="confirmation-actions">
				<a href="/products" class="btn btn-primary">Continue Shopping</a>
				<button class="btn btn-outline" onclick="window.print()">Print Receipt</button>
			</div>

			<div class="next-steps">
				<h3>What's Next?</h3>
				<div class="steps-grid">
					<div class="step-card">
						<div class="step-icon">ðŸ“§</div>
						<h4>Confirmation Email</h4>
						<p>Check your inbox for order details and tracking information</p>
					</div>
					<div class="step-card">
						<div class="step-icon">ðŸ“¦</div>
						<h4>Order Processing</h4>
						<p>We're preparing your items for shipment</p>
					</div>
					<div class="step-card">
						<div class="step-icon">ðŸšš</div>
						<h4>Shipment Tracking</h4>
