<style>
	.legal-page {
		max-width: 900px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}

	.legal-container {
		background: white;
		padding: 3rem;
		border-radius: 1rem;
		border: 1px solid var(--border-color);
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
		color: var(--text-color);
	}

	.last-updated {
		color: var(--secondary-color);
		font-size: 0.875rem;
		margin-bottom: 2rem;
	}

	.legal-content section {
		margin-bottom: 2.5rem;
	}

	.legal-content h2 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: var(--primary-color);
	}

	.legal-content p {
		line-height: 1.8;
		color: var(--text-color);
		margin-bottom: 1rem;
	}

	.legal-content ul {
		margin-left: 2rem;
		margin-bottom: 1rem;
	}

	.legal-content li {
		line-height: 1.8;
		color: var(--text-color);
		margin-bottom: 0.5rem;
	}

	.legal-content a {
		color: var(--primary-color);
		text-decoration: none;
		font-weight: 600;
	}

	.legal-content a:hover {
		text-decoration: underline;
	}

	.contact-info {
		background: var(--card-background);
		padding: 1.5rem;
		border-radius: 0.5rem;
		border: 1px solid var(--border-color);
		margin-top: 1rem;
	}

	.contact-info p {
		margin-bottom: 0.5rem;
	}

	@media (max-width: 768px) {
		.legal-container {
			padding: 2rem 1.5rem;
		}

		h1 {
			font-size: 2rem;
		}

		.legal-content h2 {
			font-size: 1.25rem;
		}
	}
</style>

