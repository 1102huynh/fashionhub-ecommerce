---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Analytics">
  <div class="analytics-header">
    <h2>Sales Overview</h2>
    <select class="period-select">
      <option value="7days">Last 7 Days</option>
      <option value="30days">Last 30 Days</option>
      <option value="90days">Last 90 Days</option>
      <option value="year">This Year</option>
    </select>
  </div>

  <!-- Key Metrics -->
  <div class="metrics-grid">
    <div class="metric-card">
      <div class="metric-label">Revenue</div>
      <div class="metric-value">$24,563</div>
      <div class="metric-change positive">+12.5% vs last period</div>
    </div>
    <div class="metric-card">
      <div class="metric-label">Orders</div>
      <div class="metric-value">342</div>
      <div class="metric-change positive">+8.3% vs last period</div>
    </div>
    <div class="metric-card">
      <div class="metric-label">Avg Order Value</div>
      <div class="metric-value">$71.82</div>
      <div class="metric-change negative">-2.1% vs last period</div>
    </div>
    <div class="metric-card">
      <div class="metric-label">Conversion Rate</div>
      <div class="metric-value">3.24%</div>
      <div class="metric-change positive">+0.8% vs last period</div>
    </div>
  </div>

  <!-- Charts -->
  <div class="charts-grid">
    <div class="chart-card">
      <h3>Revenue Trend</h3>
      <div class="chart-placeholder">
        ðŸ“ˆ Chart visualization would go here
      </div>
    </div>
    <div class="chart-card">
      <h3>Top Categories</h3>
      <div class="category-stats">
        <div class="category-item">
          <span>Women's Clothing</span>
          <strong>45%</strong>
        </div>
        <div class="category-item">
          <span>Men's Clothing</span>
          <strong>32%</strong>
        </div>
        <div class="category-item">
          <span>Accessories</span>
          <strong>23%</strong>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<style>
  .analytics-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .period-select {
    padding: 0.75rem 1rem;
    border: 1px solid var(--admin-border);
    border-radius: 0.5rem;
  }

  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .metric-card {
    background: white;
    padding: 1.5rem;
    border-radius: 0.75rem;
    border: 1px solid var(--admin-border);
  }

  .metric-label {
    font-size: 0.875rem;
    color: var(--admin-text-secondary);
    margin-bottom: 0.5rem;
  }

  .metric-value {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .metric-change {
    font-size: 0.75rem;
  }

  .metric-change.positive { color: var(--admin-success); }
  .metric-change.negative { color: var(--admin-danger); }

  .charts-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 1.5rem;
  }

  .chart-card {
    background: white;
    padding: 1.5rem;
    border-radius: 0.75rem;
    border: 1px solid var(--admin-border);
  }

  .chart-card h3 {
    margin-bottom: 1.5rem;
  }

  .chart-placeholder {
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--admin-bg);
    border-radius: 0.5rem;
    font-size: 1.5rem;
  }

  .category-stats {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .category-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: var(--admin-bg);
    border-radius: 0.5rem;
  }
</style>

