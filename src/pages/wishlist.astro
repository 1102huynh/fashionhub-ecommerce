---
import EcommerceLayout from '../layouts/EcommerceLayout.astro';
---

<EcommerceLayout title="My Wishlist - FashionHub" description="Your favorite products">
  <div class="wishlist-page">
    <div class="breadcrumb">
      <a href="/">Home</a>
      <span class="breadcrumb-separator">/</span>
      <span>Wishlist</span>
    </div>

    <div class="page-header">
      <h1>My Wishlist</h1>
      <p class="subtitle">Save your favorite items for later</p>
    </div>

    <!-- Wishlist Grid -->
    <div id="wishlist-content">
      <div class="loading">Loading your wishlist...</div>
    </div>
  </div>
</EcommerceLayout>

<style>
  .wishlist-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--secondary-color);
    font-size: 1.125rem;
  }

  .loading {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--secondary-color);
  }

  .wishlist-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .wishlist-card {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    border: 1px solid var(--border-color);
    transition: all 0.3s;
    position: relative;
  }

  .wishlist-card:hover {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    transform: translateY(-4px);
  }

  .product-image-container {
    position: relative;
    overflow: hidden;
    aspect-ratio: 3/4;
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .wishlist-card:hover .product-image {
    transform: scale(1.05);
  }

  .remove-btn {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 36px;
    height: 36px;
    background: white;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    transition: all 0.2s;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .remove-btn:hover {
    background: #fee2e2;
    color: #dc2626;
    transform: scale(1.1);
  }

  .product-info {
    padding: 1.5rem;
  }

  .product-category {
    font-size: 0.875rem;
    color: var(--secondary-color);
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .product-name {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--text-color);
  }

  .product-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  .product-actions {
    display: flex;
    gap: 0.75rem;
  }

  .btn-add-cart,
  .btn-view {
    flex: 1;
    padding: 0.75rem;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    font-size: 0.9375rem;
  }

  .btn-add-cart {
    background: var(--primary-color);
    color: white;
  }

  .btn-add-cart:hover {
    background: #1d4ed8;
    transform: translateY(-1px);
  }

  .btn-view {
    background: white;
    border: 2px solid var(--border-color);
    color: var(--text-color);
  }

  .btn-view:hover {
    border-color: var(--primary-color);
    color: var(--primary-color);
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
  }

  .empty-icon {
    font-size: 5rem;
    margin-bottom: 1.5rem;
    opacity: 0.5;
  }

  .empty-state h2 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
  }

  .empty-state p {
    color: var(--secondary-color);
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .wishlist-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1rem;
    }
  }
</style>

<script>
  import { wishlistManager } from '../stores/wishlist';
  import { cartManager } from '../stores/cart';

  function loadWishlist() {
    const container = document.getElementById('wishlist-content');
    if (!container) return;

    const items = wishlistManager.getWishlist();

    if (items.length === 0) {
      container.innerHTML = `
        <div class="empty-state">
          <div class="empty-icon">üíù</div>
          <h2>Your wishlist is empty</h2>
          <p>Save items you love to buy them later</p>
          <a href="/products" class="btn btn-primary" style="display: inline-block; padding: 1rem 2rem; text-decoration: none;">
            Start Shopping
          </a>
        </div>
      `;
      return;
    }

    const grid = document.createElement('div');
    grid.className = 'wishlist-grid';

    items.forEach(item => {
      const product = item.product;
      const primaryImage = product.images.find(img => img.isPrimary) || product.images[0];

      const card = document.createElement('div');
      card.className = 'wishlist-card';
      card.innerHTML = `
        <div class="product-image-container">
          <img src="${primaryImage.url}" alt="${product.name}" class="product-image">
          <button class="remove-btn" onclick="removeFromWishlist('${product.id}')">√ó</button>
        </div>
        <div class="product-info">
          <div class="product-category">${product.category}</div>
          <div class="product-name">${product.name}</div>
          <div class="product-price">$${product.price.toFixed(2)}</div>
          <div class="product-actions">
            <button class="btn-add-cart" onclick="addToCartFromWishlist('${product.id}')">
              Add to Cart
            </button>
            <a href="/products/${product.id}" class="btn-view">View</a>
          </div>
        </div>
      `;

      grid.appendChild(card);
    });

    container.innerHTML = '';
    container.appendChild(grid);
  }

  function removeFromWishlist(productId: string) {
    wishlistManager.removeFromWishlist(productId);
    window.showToast('Removed from wishlist', { type: 'info' });
    loadWishlist();
  }

  function addToCartFromWishlist(productId: string) {
    const items = wishlistManager.getWishlist();
    const item = items.find(i => i.product.id === productId);

    if (!item) return;

    const product = item.product;
    const defaultVariant = product.variants[0];

    cartManager.addToCart(product, defaultVariant, 1);
    window.showToast('Added to cart!', { type: 'success', title: product.name });
  }

  // Make functions global
  (window as any).removeFromWishlist = removeFromWishlist;
  (window as any).addToCartFromWishlist = addToCartFromWishlist;

  // Load wishlist
  loadWishlist();

  // Listen for wishlist updates
  window.addEventListener('wishlist-updated', loadWishlist);
</script>

